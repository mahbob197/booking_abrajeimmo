datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  phone        String?       @unique
  avatar       String?
  role         String        @default("USER")
  passwordHash String
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  reservations Reservation[]
}

model Product {
  id           Int              @id @default(autoincrement())
  title        String
  description  String           @db.Text
  price        Float
  city         String
  latitude     Float?
  longitude    Float?
  image        String?
  images       ProductImage[]
  active      Boolean   @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  reservations Reservation[]
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  url       String

  product   Product @relation(fields: [productId], references: [id])
}

model Reservation {
  id           Int      @id @default(autoincrement())
  userId       Int
  productId    Int
  startDate    DateTime
  endDate      DateTime
  totalPrice   Float

  status       String   @default("pending")

  fullName     String?
  phone        String?
  address      String?
  totalPersons Int?      @default(1)

  cinFile       String?
  passportFile  String?
  contractFile  String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
  product      Product  @relation(fields: [productId], references: [id])
}
